generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime
  updatedAt DateTime

  name          String
  type          String  @default("user")
  email         String  @unique
  emailVerified Boolean
  image         String?

  sessions    Session[]
  accounts    Account[]
  submissions Submission[]

  @@map("users")
}

model Session {
  id             String   @id @default(uuid()) @db.Uuid
  createdAt      DateTime
  updatedAt      DateTime

  expiresAt      DateTime
  token          String   @unique
  ipAddress      String?
  userAgent      String?
  impersonatedBy String?

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime
  updatedAt DateTime

  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime?
  updatedAt DateTime?

  identifier String
  value      String
  expiresAt  DateTime

  @@map("verifications")
}

model Problem {
  id          String   @id @default(uuid()) @db.Uuid
  tags        String[]
  title       String
  difficulty  String
  constraints String[]
  description String
  testCases   Json?
  slug        String   @unique
  type        String   @default("None") // Contest, Non_Contest
  solved      Int      @default(0)

  // Test Cases
  visibleTestCases Json?
  hiddenTestCases  Json?

  // CodeEditor Boilerplate Code
  functionCode Json?

  // Embedded array
  completeCode Json?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  submissions Submission[]
}

model Submission {
  id          String           @id @default(uuid()) @db.Uuid
  code        String
  languageId  Int
  status      SubmissionResult @default(PENDING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  judgetokens String[]

  max_cpu_time Int? @default(-1)
  max_memory   Int? @default(-1)

  // References to other collections
  problemId String  @db.Uuid
  userId    String  @db.Uuid
  problem   Problem @relation(fields: [problemId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
}

enum SubmissionResult {
  ACCEPTED
  REJECTED
  PENDING
  TLE
  COMPILATIONERROR
  RUNTIMEERROR
  INTERNALERROR
}
